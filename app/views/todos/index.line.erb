<%=
todos = @todos
raw(LineFlex.bubble do
  body do
    horizontal_box do
      text "三", flex: 0, action: message_action("/")
      text "Todos"
      text "+", align: "end", action: uri_action(liff_path(model: "todo", action: "new"))
    end
    separator
    list todos, margin: "lg" do |todo|
      text todo.name
      text "-", align: "end", action: message_action("DELETE /todos/#{todo.id}")
    end
  end
end.to_json
)
%>